{
    "name": "facile-it/php-oauth2-http-client",
    "description": "HTTP client for OpenID/OAuth2 authorization",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Vargiu",
            "email": "thomas.vargiu@facile.it"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "keywords": [
        "openid",
        "openid connect",
        "oidc",
        "oauth2",
        "token",
        "authentication",
        "identity",
        "token-exchange",
        "authorization",
        "psr-18"
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "facile-it/php-openid-client": "^0.1.2",
        "php-http/client-common": "^2.3",
        "psr/simple-cache": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Facile\\OAuth2\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Facile\\OAuth2\\HttpClient\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "jangregor/phpstan-prophecy": "^0.6.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.18",
        "phpstan/phpstan-deprecation-rules": "^0.12.2",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpunit/phpunit": "^8.2 || ~9.0.2",
        "laminas/laminas-diactoros": "^2.1"
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "cs-fix": "php-cs-fixer fix --diff --allow-risky=yes",
        "phpstan": "phpstan analyse --no-progress",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text",
        "check": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    }
}
